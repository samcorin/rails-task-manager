<h1>Tasks#index / Home</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <strong><%= link_to task.name, task_path(task) %></strong> - <%= task.description %>
    <%= link_to "Edit", edit_task_path(task)%>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
